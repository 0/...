#!/usr/bin/env python2

from pyimgur import upload_image


# API key from http://imgur.com/tools/imgurbash.sh
API_KEY = 'b3625162d3418ac51a9ee805b1840452'


if __name__ == '__main__':
	from sys import argv, exit

	if len(argv) != 2:
		print('I require the filename, and only the filename.')
		exit(1)

	result = upload_image(argv[1], api_key=API_KEY)

	print(result['links']['original'])
